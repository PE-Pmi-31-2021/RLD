<Window x:Class="RLD.Presentation.RadioConfirmDelete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RLD.Presentation"
        mc:Ignorable="d"
        Title="Delete radio" Height="150" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="sureTextBlock" Grid.Row="1" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,0">Sure want to delete radio?</TextBlock>
        <WrapPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="OKButton" IsDefault="True" Click="Accept_Click" MinWidth="100" MinHeight="25" Margin="0,0,10,0">OK</Button>
            <Button x:Name="cancelButton" IsCancel="True" MinWidth="100" MinHeight="25">Cancel</Button>
        </WrapPanel>
    </Grid>
</Window>
